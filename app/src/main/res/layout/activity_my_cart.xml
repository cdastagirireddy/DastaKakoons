<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuncham.kakoons.MyCart">

    <Button
        android:id="@+id/cart_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#43c801"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Proceed to CheckOut"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cart_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:alwaysDrawnWithCache="false"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/cart_proceed">

        <RelativeLayout
            android:background="#ffffff"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@mipmap/ic_launcher"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/card_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_toRightOf="@id/cart_image"
                android:hint="Product Name" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
